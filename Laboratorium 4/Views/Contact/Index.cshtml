@model List<Contact>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="container mt-4">
    <h2>Kontakty</h2>
    <a class="btn btn-primary" asp-controller="Contact" asp-action="Create">Dodaj kontakt</a>
    @if (Model.Count > 0)
    {
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model[0].Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model[0].Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model[0].Priority)
                    </th>
                    <th>
                        Akcje
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in @Model)
                {
                    <tr>
                        <td>
                            @item.Name
                        </td>
                        <td>
                            @item.Email
                        </td>
                        <td>
                            @item.Phone
                        </td>
                        <td>
                            @item.Birth?.ToString("yyyy-MM-dd")
                        </td>
                        <td>
                            @item.Priority
                        </td>
                        <td>
                            <a href="@Url.Action("Edit", "Contact", new { id = item.id })" class="btn btn-warning">Edytuj</a>
                            <a href="@Url.Action("Delete", "Contact", new { id = item.id })" class="btn btn-danger">Usuń</a>
                            <a href="@Url.Action("Details", "Contact", new { id = item.id })" class="btn btn-info">Szczegóły</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>