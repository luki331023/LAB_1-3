@{
}

<div class="container mt-4">
    <h2 class="mb-3">Szczegóły kontaktu</h2>

    <table class="table table-bordered">
        <tr>
            <th style="width: 150px;">Imię</th>
            <td>@Model.Name</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>@Model.Email</td>
        </tr>
        <tr>
            <th>Telefon</th>
            <td>@Model.Phone</td>
        </tr>
        <tr>
            <th>Data urodzenia</th>
            <td>@Model.Birth</td>
        </tr>
    </table>

    <a asp-controller="Contact" asp-action="Index" class="btn btn-primary">Powrót do listy kontaktów</a>
</div>